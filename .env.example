# AI Employee Environment Variables
# IMPORTANT: Copy this file to .env and fill in YOUR OWN values
# NEVER commit .env to git!

# Vault Configuration
VAULT_PATH=./vault

# Gmail Configuration (optional)
GMAIL_CREDENTIALS_PATH=./watchers/credentials.json

# Development Mode (set to false in production)
DEV_MODE=false
DRY_RUN=false

# Logging
LOG_LEVEL=INFO

# LinkedIn Configuration
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password

# Odoo Configuration (Gold Tier)
ODOO_URL=http://localhost:8069
ODOO_DB=your_database_name
ODOO_USERNAME=your-email@example.com
ODOO_API_KEY=your-api-key

# Twitter API (Official API v2 - Recommended)
TWITTER_BEARER_TOKEN=your-bearer-token
TWITTER_API_KEY=your-api-key
TWITTER_API_SECRET=your-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret

# Social Media Test Accounts (Playwright Automation - Legacy, not using API)
# WARNING: These are TEST accounts - may get banned!
TWITTER_EMAIL=your-test-email@example.com
TWITTER_PASSWORD=your-test-password

INSTAGRAM_EMAIL=your-test-email@example.com
INSTAGRAM_PASSWORD=your-test-password

FACEBOOK_EMAIL=your-test-email@example.com
FACEBOOK_PASSWORD=your-test-password

# Facebook Graph API (Official API - FREE)
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret
FACEBOOK_PAGE_ID=your-page-id
FACEBOOK_USER_ACCESS_TOKEN=your-user-access-token
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# Instagram Graph API
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-business-account-id

# WhatsApp Integration (Green API - Silver Tier)
# Sign up at https://green-api.com, create instance, scan QR
GREEN_API_INSTANCE_ID=your-instance-id
GREEN_API_TOKEN=your-api-token

# Odoo API Settings for Cloud (Platinum Tier)
ODOO_CLOUD_USERNAME=your-cloud-username
ODOO_CLOUD_PASSWORD=your-cloud-password
